                                    <input type="hidden" value="{{../_id}}" name="heroid">
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-danger position-absolute" form="delimg{{../_id}}{{@index}}">
                                            X
                                        </button>
                                    </div>
                                </form>
                                <img src="data:{{lookup ../contentType @index}};base64,{{lookup ../imageBase64 @index}}" class="d-block w-100" alt="...">
                              </div>
                              
                            {{/each}}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{@index}}" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel{{@index}}" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>